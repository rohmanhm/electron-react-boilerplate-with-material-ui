{
  "javascript.validate.enable": false,
  "flow.useNPMPackagedFlow": true,
  "search.exclude": {
    "**/*.js": { "when": "$(basename).tsx"},
    "*.js": { "when": "$(basename).tsx"},
    "*.jsx": { "when": "$(basename).tsx"},
    "**/*.jsx": { "when": "$(basename).tsx"},
    ".git": true,
    ".eslintcache": true,
    "app/dist": true,
    "app/main.prod.js": true,
    "app/main.prod.js.map": true,
    "bower_components": true,
    "dll": true,
    "flow-typed": true,
    "release": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true
  }
}
